{
	"tasks": {
		"start": "deno run --allow-env --allow-read --allow-net --env-file src/main.ts",
		"start-docker": "deno run --allow-env --allow-read --allow-net src/main.ts",
		"dev": "deno run --allow-env --allow-read --allow-net --env-file --watch src/main.ts"
	},
	"imports": {
		"hive-tx": "npm:hive-tx@^6.0.1"
	},
	"fmt": {
		"indentWidth": 2,
		"lineWidth": 80,
		"semiColons": false,
		"singleQuote": true,
		"useTabs": true,
    "include": [
			"src/",
			"./*.ts"
		]
	}
}
